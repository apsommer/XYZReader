<resources>

    <!-- base application theme -->
    <style name="CustomTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorPrimary">@color/primary_500</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_700</item>
        <item name="android:colorAccent">@color/accent_A200</item>
        <item name="android:statusBarColor">@color/primary_dark_700</item>

    </style>

    <!-- viewpager sliding tabs -->
    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#000000</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <!-- sliding tabs text appearance -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">

    </style>

</resources>
